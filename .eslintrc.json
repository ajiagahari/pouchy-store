{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": ["error", { "allow": ["_id", "_rev", "_user", "_deleted", "_opts"] }],
        "no-use-before-define": [0, {"functions": true, "classes": true}],
        "no-console": "off"
    }
}